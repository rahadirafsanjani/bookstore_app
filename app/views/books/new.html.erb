<h1>Tambah Buku Baru</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, 'Judul' %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :published, 'Tahun Terbit' %>
    <%= form.datetime_select :published %> <!-- Menggunakan datetime_select untuk tahun terbit -->
  </div>

  <div>
    <%= form.label :author_id, 'Penulis' %>
    <%= form.collection_select :author_id, @authors, :id, :name, prompt: 'Pilih Penulis' %>
  </div>

  <div>
    <%= form.submit 'Buat Buku' %>
  </div>
<% end %>

<%= link_to 'Kembali ke Daftar Buku', books_path %>
